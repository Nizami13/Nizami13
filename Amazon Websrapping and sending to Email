def send_mail():
    server = smtplib.SMTP_SSL('smtp.gmail.com',465)
    server.ehlo()
    #server.starttls()
    server.ehlo()
    server.login('imamverdiyev25@gmail.com','XXXXX')
    
    subject = "The airpod you want to buy is below AED730! Now is your chance to buy!"
    body = "Nizami, This is the moment we have been waiting for. Now is your chance to pick up the airpod. Don't mess it up! Link here: https://www.amazon.ae/Apple-AirPods-MagSafe-charging-case/dp/B09JR9VNSP/ref=sr_1_5?keywords=airpods+pro&qid=1642871016&sprefix=airpo%2Caps%2C299&sr=8-5"
   
    msg = f"Subject: {subject}\n\n{body}"
    
    server.sendmail(
        'imamverdiyev25@gmail.com',
        msg
     
    )

